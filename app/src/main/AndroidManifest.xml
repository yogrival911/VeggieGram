<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.veggiegram">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.VeggieGram">
        <activity android:name=".NewAddressActivity"></activity>
        <activity android:name=".MyAddressActivity" />
        <activity android:name=".SigninActivity" />
        <activity android:name=".WalletActivity" />
        <activity android:name=".RazorpayActivity" />
        <activity android:name=".PaymentStatusActivity" />
        <activity android:name=".OrderDetailActivity" />
        <activity android:name=".OrderActivity" />
        <activity android:name=".SearchActivity" />
        <activity android:name=".ContactActivity" />
        <activity android:name=".AddressActivity" />
        <activity android:name=".CartActivity" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/splashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>