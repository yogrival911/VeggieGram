<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/carView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    cardView:cardCornerRadius="8dp"
    cardView:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/cartImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            cardView:layout_constraintStart_toStartOf="parent"
            cardView:layout_constraintTop_toTopOf="parent"

            cardView:srcCompat="@mipmap/logo_foreground"
            tools:background="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/cartItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="Vegetables"
            android:textColor="@color/black"
            cardView:layout_constraintStart_toEndOf="@+id/cartImage"
            cardView:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500 gams"
            android:textColor="@color/black"
            cardView:layout_constraintStart_toStartOf="@+id/cartItemName"
            cardView:layout_constraintTop_toBottomOf="@+id/cartItemName" />

        <TextView
            android:id="@+id/sellPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs. 45/-"
            android:textColor="@color/black"
            cardView:layout_constraintStart_toEndOf="@+id/textView"
            cardView:layout_constraintTop_toBottomOf="@+id/quantity" />

        <ImageView
            android:id="@+id/fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            cardView:layout_constraintBottom_toBottomOf="parent"
            cardView:layout_constraintEnd_toEndOf="parent"
            cardView:layout_constraintTop_toTopOf="parent"
            cardView:srcCompat="@drawable/ic_baseline_delete_24" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\u20B9"
            android:textColor="@color/black"
            cardView:layout_constraintStart_toStartOf="@+id/quantity"
            cardView:layout_constraintTop_toBottomOf="@+id/quantity" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            cardView:layout_constraintStart_toStartOf="@+id/textView"
            cardView:layout_constraintTop_toBottomOf="@+id/sellPrice"
            cardView:srcCompat="@drawable/remove" />

        <EditText
            android:id="@+id/etQuantity"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:ems="10"
            android:inputType="number"
            cardView:layout_constraintStart_toEndOf="@+id/imageView3"
            cardView:layout_constraintTop_toBottomOf="@+id/sellPrice" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            cardView:layout_constraintStart_toEndOf="@+id/etQuantity"
            cardView:layout_constraintTop_toBottomOf="@+id/sellPrice"
            cardView:srcCompat="@drawable/add" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>